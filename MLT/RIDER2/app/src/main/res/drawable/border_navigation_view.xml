<!-- res/drawable/border_navigation_view.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Background color -->
        </shape>
    </item>
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent to show background -->
            <stroke android:width="1dp" android:color="@android:color/black"/> <!-- Border color -->
        </shape>
    </item>
</layer-list>
