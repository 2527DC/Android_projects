<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Popup overlay theme -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background_color</item>
    </style>
    <style name="CustomMenuItemTextStyle" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">18sp</item> <!-- Set your desired text size -->
    </style>

    <style name="MenuItemTitleStyle">
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
        <item name="android:textStyle">bold</item>    <!-- Bold text style -->
        <item name="android:textSize">18sp</item>     <!-- Increase text size -->
    </style>


</resources>
